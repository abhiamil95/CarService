<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    <class name="com.carservice.model.payment.DriverCharges" table="DriverCharges" schema="carservice1">
    <id name="driverchargeid">
    <generator class="increment"></generator>
    </id>
    <property name="charges_for_day"></property>
    <property name="charges_for_night"></property>
    <property name="day_charges"></property>
    <property name="night_charges"></property>
    <property name="monthly_rate"></property>
    <property name="weekly_rate"></property>
    <property name="waiting_rate"></property>
    </class>
    </hibernate-mapping>